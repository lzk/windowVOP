<UserControl x:Class="VOP.RefreshButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:con="clr-namespace:VOP"
             Name="container"
             mc:Ignorable="d" 
             d:DesignHeight="22.4" d:DesignWidth="22.4">
    <UserControl.Resources>
        <ImageBrush x:Key="imgBrushNormal" ImageSource="..\Images\RefreshNormal.tif"/>
        <ImageBrush x:Key="imgBrushClick" ImageSource="..\Images\RefreshClick.tif"/>

        <Style x:Key="RefreshFocus">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="-1" StrokeThickness="1" Stroke="Black" StrokeDashArray="1 2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key ="myButtonTemplate"  TargetType ="{x:Type Button}" >
            <Grid>
                <Rectangle Name="rect">
                    <Rectangle.Fill>
                        <ImageBrush x:Name="imgBrush" ImageSource="{Binding Path=(con:RefreshImagePath.Image),
                                RelativeSource={RelativeSource FindAncestor,
                                AncestorType={x:Type Button}}}"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>

            <ControlTemplate.Triggers>
                <Trigger Property="Button.IsPressed" Value="True">
                    <Setter TargetName="rect" Property="Fill" Value="{StaticResource imgBrushClick}"/>
                </Trigger>
                <Trigger Property="Button.IsEnabled" Value="False">
                    <Setter TargetName="rect" Property="Fill" Value="{StaticResource imgBrushNormal}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="RefreshButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource RefreshFocus}"></Setter>
            <Setter Property="Template" Value="{StaticResource myButtonTemplate}"></Setter>
        </Style>
    </UserControl.Resources>


    <Grid Name="grid">
        <Button Name="refreshBtn" Style="{StaticResource RefreshButtonStyle}"           
                con:RefreshImagePath.Image="{Binding ElementName=container, Path=ImagePath}">
        </Button>
    </Grid>
</UserControl>
