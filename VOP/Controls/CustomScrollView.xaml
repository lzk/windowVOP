    <Setter.Value>
      <ControlTemplate TargetType="{x:Type Thumb}">

                    <Grid Height="Auto" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4.5" />
                            <ColumnDefinition Width="9*" />
                            <ColumnDefinition Width="4.5" />
