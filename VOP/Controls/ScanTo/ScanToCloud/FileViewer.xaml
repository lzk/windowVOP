<Window x:Class="VOP.Controls.FileViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Viewer" 
        xmlns:local="clr-namespace:VOP.Controls"
        Height="580" Width="700" 
        WindowStartupLocation="CenterOwner" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        AllowsTransparency="True"
        Background="Transparent" 
        ShowInTaskbar="False" 
        BorderThickness="25,25,25,25"
        Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../CustomButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Effect>
        <DropShadowEffect BlurRadius="30" Color="#FF858484" Direction="292" ShadowDepth="0" Opacity="1"/>
    </Window.Effect>

    <Viewbox Stretch="Fill">
        <Border Height="530" Width="650" Background="AliceBlue">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Name="TitleBar"  Background="Transparent" Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="2">
                    <TextBlock Name="TitleBarText" Text="Dropbox File Viewer" FontSize="15" Foreground="#28E" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>

                <local:MinimizeCloseButton Grid.Row="0" Grid.Column="1" MinimizeOrCloseStyle="Close" IsCancel="True"/>


                <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <local:ImageButton2 
                                        x:Name="UpFolderButton"
                                        ImagePath="../../../Images/folder_with_arrow_up.png"
                                        Width="70"
                                        Height="80"
                                        Margin="0,0,0,-20"
                                        Foreground="White"
                                        PreviewMouseLeftButtonDown="UpFolderButtonClick"
                                        /> 
                                <TextBlock Name="PathText" 
                                           VerticalAlignment="Center" 
                                           Width="400" 
                                           Margin="10,0,0,0" 
                                           FontSize="18" 
                                           TextWrapping="Wrap"
                                           Foreground="CadetBlue"/>
                            </StackPanel>
                            <ScrollViewer CanContentScroll="true"
                                        SelectiveScrollingGrid.SelectiveScrollingOrientation="Both" 
                                        VerticalScrollBarVisibility="Auto"
                                        HorizontalScrollBarVisibility="Disabled">
                                <ListView Name="FileBrowser" Height="380" />
                            </ScrollViewer>
                           
                        </StackPanel>
                    </Border>
                    <StackPanel Orientation="Horizontal"  Grid.Row="1" >
                        <TextBlock Name="UploadStaus" 
                                   Width="470"
                                   VerticalAlignment="Center" 
                                   FontSize="16" 
                                   Foreground="CadetBlue"
                                   Margin="15,0,0,0" 
                                   />
                        <Button 
                            Name="UploadButton"
                            HorizontalAlignment="Right" 
                            Margin="10,6" 
                            Width="125" 
                            Height="35"
                            FontSize="16"
                            Style="{StaticResource CustomGreenButtonStyle}" 
                            Click="UploadButton_Click"
                            >Upload</Button>
                    </StackPanel>
                    
                </Grid>


            </Grid>
          
        </Border>
    </Viewbox>
  
</Window>
