    <Style x:Key="ScreenButtonStyle" TargetType="Button">
        <Setter Property="Cursor"  Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">

                    <Grid ClipToBounds="True">

                        <Image Name="backgroundImage" Source="../Images/screen_normal.png"/>


                        <!-- Present Content (text) of the button. -->
                        <StackPanel Name="myContentPresenterDockPanel" 
                                    Orientation="Vertical"
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,0">
                                        <ContentPresenter x:Name="myContentPresenter"  
                                                Style="{StaticResource DsDigital}"     
                                                Content="{TemplateBinding  Content}" 
                                                TextBlock.FontSize="144"
                                                TextBlock.Foreground="#FF48C6E0" 
                                                HorizontalAlignment="Center" 
                                                />
                                        <TextBlock 
                                            x:Name="DetailText"
                                            Text="Scan To Email"
                                            FontSize="20"
                                            Foreground="#FF48C6E0"
                                            Style="{StaticResource DsDigital}"     
                                            HorizontalAlignment="Center"                                             
                                            Margin="0,0,0,0"                                            
                                            VerticalAlignment="Center" MaxWidth="240"
                                                />          
                        </StackPanel>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsPressed" Value="false" />
                                <Condition Property="IsMouseOver" Value="true" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="backgroundImage"  Property="Source"  Value="../Images/screen_over.png"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsPressed" Value="true" />
                                <Condition Property="IsMouseOver" Value="true" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="backgroundImage"  Property="Source"  Value="../Images/screen_press.png"/>
                        </MultiTrigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

