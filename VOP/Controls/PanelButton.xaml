    <Style x:Key="ScreenButtonStyle" TargetType="Button">
        <Setter Property="Cursor"  Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid ClipToBounds="True">
                        <Image Name="backgroundImage" Source="../Images/screen_normal.png"/>
                        <!-- Present Content (text) of the button. -->
                        <StackPanel Name="myContentPresenterDockPanel" 
                                    Orientation="Vertical"
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Center" 
                                    Width="460"
                                    Margin="0,0,0,0">
 
                            <Image Name="screenImage" Source="../Images/main_img_print.png" Margin="0,10,0,0"
                                           HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="None" 
                                   ></Image>
                            <TextBlock 
                                            x:Name="DetailText"
                                            Text="Scan To Email"
                                            FontSize="20"

                                            FontWeight="Bold"
                                            Foreground="Black"                                               
                                            HorizontalAlignment="Center" 
                                            Margin="0,0,0,0"
                                            MaxWidth="460"
                                                />
                            <Grid Margin="0,10,0,0" HorizontalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="20"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                            x:Name="adfInfoText"
                                            Text="ADF : "
                                            FontSize="12"
                                            Foreground="Black"    
                                            HorizontalAlignment="Left" 
                                            TextAlignment="Left"                                            
                                                />
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                            x:Name="adfText"
                                            Text="Two Side "
                                            FontSize="12"
                                            Foreground="Black"    
                                            HorizontalAlignment="Left" 
                                            TextAlignment="Left"                                            
                                                />                            
                                <TextBlock  Grid.Row="1" Grid.Column="0"
                                            x:Name="dpiInfoText"
                                            Text="DPI : "
                                            FontSize="12"
                                            Foreground="Black"    
                                            HorizontalAlignment="Left" 
                                            TextAlignment="Left"
                                            Margin="0,0,0,0"
                                            
                                                />
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                            x:Name="dpiText"
                                            Text="300DPI "
                                            FontSize="12"
                                            Foreground="Black"    
                                            HorizontalAlignment="Left" 
                                            TextAlignment="Left"                                            
                                                />
                                <TextBlock Grid.Row="2" Grid.Column="0"
                                            x:Name="colorInfoText"
                                            Text="Mode : "
                                            FontSize="12"
                                            Foreground="Black"    
                                            HorizontalAlignment="Left" 
                                            TextAlignment="Left"
                                            Margin="0,0,0,0"
                                            
                                                />
                                <TextBlock Grid.Row="2" Grid.Column="1"
                                            x:Name="colorText"
                                            Text="Color"
                                            FontSize="12"
                                            Foreground="Black"    
                                            HorizontalAlignment="Left" 
                                            TextAlignment="Left"                                            
                                                />
                            </Grid>
                        </StackPanel>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsPressed" Value="false" />
                                <Condition Property="IsMouseOver" Value="true" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="backgroundImage"  Property="Source"  Value="../Images/screen_over.png"/>
                        </MultiTrigger>
