                            </MultiTrigger.Conditions>
                            <Setter TargetName="backgroundImage"  Property="Source"  Value="../Images/screen_press.png"/>
                        </MultiTrigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

