<Window x:Class="VOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="638" Width="850"
        AllowsTransparency="true"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Closed="handler_closed"
        Loaded="LoadedMainWindow"
        WindowStyle="None" 
        xmlns:local="clr-namespace:VOP.Controls"
        xmlns:mycontrol="clr-namespace:VOP"
        UseLayoutRounding="True"
        Name="mainWindow"
        >
    <Window.Resources>
        <ControlTemplate x:Key="pageSwitch" TargetType="{x:Type CheckBox}">
            <Grid Name="grid"
                  Width="{TemplateBinding Width}"
                  Height="{TemplateBinding Height}">
                
                <Grid  Name="Off" Width="{Binding ElementName=grid, Path=Width}"
                       Height="{Binding ElementName=grid, Path=Height}"
                       Background="White">
                    <TextBlock 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{x:Null}"
                        Foreground="#737373"
                        Text="{TemplateBinding  Content}"
                        FontSize="{TemplateBinding FontSize}"
                        TextAlignment="Center">                        
                    </TextBlock>
                </Grid>

                <Grid  Name="On" Width="{Binding ElementName=grid, Path=Width}"
                       Height="{Binding ElementName=grid, Path=Height}"
                       Background="#737373">
                    <TextBlock                                  
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{x:Null}"
                        Foreground="White"
                        Text="{TemplateBinding  Content}"
                        FontSize="{TemplateBinding FontSize}"
                        TextAlignment="Center">
                    </TextBlock>
                </Grid>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="Off" Property="Visibility" Value="Hidden" />                 
                    <Setter TargetName="On" Property="Visibility" Value="Visible" />
                </Trigger>
                <Trigger Property="IsChecked" Value="False">
                    <Setter TargetName="Off" Property="Visibility" Value="Visible" />
                    <Setter TargetName="On" Property="Visibility" Value="Hidden" />
                </Trigger>

                <Trigger Property="IsPressed" Value="False"></Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <SolidColorBrush x:Key="lineColor_1" Color="#AAAAAA" />
        <SolidColorBrush x:Key="lineColor_2" Color="#555555" />
        <ImageBrush x:Key="imgBk_Brush_1"  ImageSource="Images\PagePrint.png" />
        <ImageBrush x:Key="imgBk_Brush_2"  ImageSource="Images\PageCopy.png" />
        <ImageBrush x:Key="imgBk_Brush_3"  ImageSource="Images\PageScan.png" />
        <ImageBrush x:Key="imgBk_Brush_4"  ImageSource="Images\PageSetting.png" />        
    </Window.Resources>

        <Viewbox Stretch="Fill">

    <Grid Width="850" Height="638" >
        <Grid.Background>
            <ImageBrush ImageSource="Images\background.png" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="96*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="335*"/>
            <RowDefinition Height="38*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115*" />
            <ColumnDefinition Width="161*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="88*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="87*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="88*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="87*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="103*" />
            <ColumnDefinition Width="117*" />
        </Grid.ColumnDefinitions>


        <!-- Title Bar Layout --> 
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="13">

                    <TextBlock Text="{StaticResource ResStr_VirtualOperationPanel}" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="24"  />

            <Image HorizontalAlignment="Left" VerticalAlignment="Center"  Source="Images\mainWindow_Logo.png" Height="15" Margin="20,0" Width="100" />

            <StackPanel HorizontalAlignment="Right" Margin="0,0,4,0" Orientation="Horizontal" >
                <local:MinimizeCloseButton x:Name="btnMinimize" Height="30" Width="30" Click="ControlBtnClick" MinimizeOrCloseStyle="Minimize" />
                <local:MinimizeCloseButton x:Name="btnClose"    Height="30" Width="30" Click="ControlBtnClick" MinimizeOrCloseStyle="Close" />
            </StackPanel>

        </Grid>

      

        <TextBlock x:Name="txtPageName" Grid.Column="1" Grid.Row="2" Margin="5, 15, 0, 0" FontSize="45.31" Foreground="#676767"> </TextBlock>

        <Rectangle Name="line1" Grid.Row="2" Grid.Column="2" Fill="{StaticResource lineColor_1}" Margin="0, 15, 0, 0"/>
        <Rectangle Name="line2" Grid.Row="2" Grid.Column="4" Fill="{StaticResource lineColor_1}" Margin="0, 15, 0, 0" />
        <Rectangle Name="line3" Grid.Row="2" Grid.Column="6" Fill="{StaticResource lineColor_1}" Margin="0, 15, 0, 0"/>
        <Rectangle Name="line4" Grid.Row="2" Grid.Column="8" Fill="{StaticResource lineColor_1}" Margin="0, 15, 0, 0" />
        <Rectangle Name="line5" Grid.Row="2" Grid.Column="10" Fill="{StaticResource lineColor_1}" Margin="0, 15, 0, 0"/>

        <Grid Name="Print_Grid" Grid.Column="3" Grid.Row="2">
            <Image Width="62" HorizontalAlignment="Center" VerticalAlignment="Bottom"  Margin="0,0,0, 7" Source="Images\btnPrint.tif" />
            <Button x:Name="btnPrint" Click="NvgBtnClick" Opacity="0.0" Margin="0,10,0,0"/>
        </Grid>
        <Grid Name="Scan_Grid" Grid.Column="5" Grid.Row="2">
            <Image  Width="62" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0, 7" Source="Images\btnCopy.tif" />
            <Button x:Name="btnCopy" Click="NvgBtnClick" Opacity="0.0" Margin="0,10,0,0"/>
        </Grid>

        <Grid Name="Copy_Grid" Grid.Column="7" Grid.Row="2">
            <Image  Width="62" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0, 7" Source="Images\btnScan.tif" />
            <Button x:Name="btnScan" Click="NvgBtnClick" Opacity="0.0" Margin="0,10,0,0"/>
        </Grid>

        <Grid Name="Setting_Grid" Grid.Column="9" Grid.Row="2">
            <Image Width="62" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0, 7" Source="Images\btnSetting.tif" />
            <Button x:Name="btnSetting" Click="NvgBtnClick" Opacity="0.0" Margin="0,10,0,0"/>
        </Grid>


        <Grid Name="contentGrid" Grid.Row="4" Grid.ColumnSpan="14" Margin="0, -20, 0, 0"  Width="638" Height="367">
            <Border VerticalAlignment="Top" Name="subPageView" Width="{Binding ElementName=contentGrid, Path=Width}" Height="{Binding ElementName=contentGrid, Path=Height}"/>            
        </Grid>

        <Grid Grid.Column="1" Grid.Row="3"  Grid.ColumnSpan="11" Margin="0,0,0,-2"> 
            <Rectangle  RadiusX="7" RadiusY="7" Fill="Black" />
            <Rectangle RadiusX="7" RadiusY="7" Fill="White" Margin="1,1,1,3"/>                   
        </Grid>

        <Rectangle Name="line6" Grid.Column="2" Grid.Row="3" Fill="{StaticResource lineColor_2}" />
        <Rectangle Name="line7" Grid.Column="4" Grid.Row="3" Fill="{StaticResource lineColor_2}" />
        <Rectangle Name="line8" Grid.Column="6" Grid.Row="3" Fill="{StaticResource lineColor_2}" />
        <Rectangle Name="line9" Grid.Column="8" Grid.Row="3" Fill="{StaticResource lineColor_2}" />
        <Rectangle Name="line10" Grid.Column="10" Grid.Row="3" Fill="{StaticResource lineColor_2}" />


        <mycontrol:customTabItem x:Name="tabItem_Print"   Grid.Column="3" Grid.Row="3"  Margin="0,1"                             
                                 IsSelect="False" 
                                 FontSize="16.99" 
                                 Text="{StaticResource ResStr_ExtraAdd_Print}">
        </mycontrol:customTabItem>

        <mycontrol:customTabItem x:Name="tabItem_Copy"   Grid.Column="5" Grid.Row="3" Margin="0,1"                               
                                 IsSelect="False" 
                                 FontSize="16.99" 
                                 Text="{StaticResource ResStr_ExtraAdd_Copy}">
        </mycontrol:customTabItem>


        <mycontrol:customTabItem x:Name="tabItem_Scan"     Grid.Column="7" Grid.Row="3" Margin="0,1"                                 
                                 IsSelect="False" 
                                 FontSize="16.99" 
                                 Text="{StaticResource ResStr_ExtraAdd_Scan}">
        </mycontrol:customTabItem>

        <mycontrol:customTabItem x:Name="tabItem_Setting"   Grid.Column="9" Grid.Row="3" Margin="0,1"                                 
                                 IsSelect="False" 
                                 FontSize="16.99" 
                                 Text="{StaticResource ResStr_Setting}">
        </mycontrol:customTabItem>

        <mycontrol:LogonButton  x:Name="btnLogin"  Grid.Column="11" Grid.Row="2" Margin="10, 15, 10, 5"  
                                btnClick="NvgBtnClick" 
                                IsLogon="False"
                                bottomText="{StaticResource ResStr_Login_Register}" />

        <!--<StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.ColumnSpan="13">
             <Button Name="btnMinimize" Click="ControlBtnClick" Width="30" Height="30" Margin="0,0,2,0" >-</Button>
             <Button Name="btnClose"    Click="ControlBtnClick" Width="30" Height="30" Margin="0,0,5,0" >X</Button>
             </StackPanel>-->

       <Border VerticalAlignment="Center" HorizontalAlignment="Center" Name="statusPageView" Grid.ColumnSpan="100" Grid.RowSpan="100" 
                Height="638" Width="850"
                />
        

    </Grid>

        </Viewbox>
</Window>
