<Window x:Class="VOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="638" Width="850"
        AllowsTransparency="true"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="LoadedMainWindow"
        WindowStyle="None" 
        xmlns:mycontrol="clr-namespace:VOP">
    <Window.Resources>
        <ControlTemplate x:Key="pageSwitch" TargetType="{x:Type CheckBox}">
            <Grid Name="grid"
                  Width="{TemplateBinding Width}"
                  Height="{TemplateBinding Height}">
                
                <Grid  Name="Off" Width="{Binding ElementName=grid, Path=Width}"
                       Height="{Binding ElementName=grid, Path=Height}"
                       Background="White">
                    <TextBlock 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{x:Null}"
                        Foreground="#737373"
                        Text="{TemplateBinding  Content}"
                        FontSize="{TemplateBinding FontSize}"
                        TextAlignment="Center">                        
                    </TextBlock>
                </Grid>

                <Grid  Name="On" Width="{Binding ElementName=grid, Path=Width}"
                       Height="{Binding ElementName=grid, Path=Height}"
                       Background="#737373">
                    <TextBlock                                  
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{x:Null}"
                        Foreground="White"
                        Text="{TemplateBinding  Content}"
                        FontSize="{TemplateBinding FontSize}"
                        TextAlignment="Center">
                    </TextBlock>
                </Grid>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="Off" Property="Visibility" Value="Hidden" />                 
                    <Setter TargetName="On" Property="Visibility" Value="Visible" />
                </Trigger>
                <Trigger Property="IsChecked" Value="False">
                    <Setter TargetName="Off" Property="Visibility" Value="Visible" />
                    <Setter TargetName="On" Property="Visibility" Value="Hidden" />
                </Trigger>

                <Trigger Property="IsPressed" Value="False"></Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <SolidColorBrush x:Key="lineColor_1" Color="#AAAAAA" />
        <SolidColorBrush x:Key="lineColor_2" Color="#555555" />
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images\background.tif" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="102*"/>
            <RowDefinition Height="96*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="335*"/>
            <RowDefinition Height="38*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115*" />
            <ColumnDefinition Width="161*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="88*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="87*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="88*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="87*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="103*" />
            <ColumnDefinition Width="117*" />
        </Grid.ColumnDefinitions>
        
      

        <TextBlock Grid.Column="1" Grid.Row="2" Margin="5, 15, 0, 0" FontSize="48" Foreground="#676767"> 打印</TextBlock>

        <Rectangle Grid.Row="2" Grid.Column="2" Fill="{StaticResource lineColor_1}" Margin="0, 15, 0, 0"/>
        <Rectangle Grid.Row="2" Grid.Column="4" Fill="{StaticResource lineColor_1}" Margin="0, 15, 0, 0" />
        <Rectangle Grid.Row="2" Grid.Column="6" Fill="{StaticResource lineColor_1}" Margin="0, 15, 0, 0"/>
        <Rectangle Grid.Row="2" Grid.Column="8" Fill="{StaticResource lineColor_1}" Margin="0, 15, 0, 0" />
        <Rectangle Grid.Row="2" Grid.Column="10" Fill="{StaticResource lineColor_1}" Margin="0, 15, 0, 0"/>

        <Image Grid.Column="3" Grid.Row="2" Width="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0, 5" Source="Images\btnPrint.tif" />
        <Image Grid.Column="5" Grid.Row="2" Width="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0, 5" Source="Images\btnCopy.tif" />
        <Image Grid.Column="7" Grid.Row="2" Width="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0, 5" Source="Images\btnScan.tif" />
        <Image Grid.Column="9" Grid.Row="2" Width="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0, 5" Source="Images\btnSetting.tif" />


        <Button x:Name="btnPrint" Grid.Column="3" Grid.Row="2"  Click="NvgBtnClick" Opacity="0.0" />
        <Button x:Name="btnCopy"    Grid.Column="5" Grid.Row="2" Click="NvgBtnClick" Opacity="0.0"/>
        <Button x:Name="btnScan"   Grid.Column="7" Grid.Row="2" Click="NvgBtnClick" Opacity="0.0"/>
        <Button x:Name="btnSetting"  Grid.Column="9" Grid.Row="2" Click="NvgBtnClick" Opacity="0.0"/>

        <Grid Grid.Row="4" Grid.ColumnSpan="14" Margin="0, -20, 0, 0">
            
        
            <Border VerticalAlignment="Top" Name="subPageView" >
            </Border>

            <Border VerticalAlignment="Top" Name="statusPageView" Grid.Row="4" Grid.ColumnSpan="14" Opacity="1.0">
            </Border>

        </Grid>






        <Border Grid.Column="1" Grid.Row="3"  Grid.ColumnSpan="11" CornerRadius="5" BorderThickness="1" Background="White" BorderBrush="Black">
            <UIElement.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.8" Direction="270"/>
            </UIElement.Effect>
        </Border>


        <Rectangle Grid.Column="2" Grid.Row="3" Fill="{StaticResource lineColor_2}" />
        <Rectangle Grid.Column="4" Grid.Row="3" Fill="{StaticResource lineColor_2}" />
        <Rectangle Grid.Column="6" Grid.Row="3" Fill="{StaticResource lineColor_2}" />
        <Rectangle Grid.Column="8" Grid.Row="3" Fill="{StaticResource lineColor_2}" />
        <Rectangle Grid.Column="10" Grid.Row="3" Fill="{StaticResource lineColor_2}" />



        

        <mycontrol:customTabItem x:Name="tabItem_Printer"   Grid.Column="3" Grid.Row="3"  Margin="0,1"                             
                                 IsSelect="False" 
                                 FontSize="20" 
                                 Text="打印">
        </mycontrol:customTabItem>

        <mycontrol:customTabItem x:Name="tabItem_Copy"   Grid.Column="5" Grid.Row="3" Margin="0,1"                               
                                 IsSelect="False" 
                                 FontSize="20" 
                                 Text="复印">
        </mycontrol:customTabItem>


        <mycontrol:customTabItem x:Name="tabItem_Scan"     Grid.Column="7" Grid.Row="3" Margin="0,1"                                 
                                 IsSelect="False" 
                                 FontSize="20" 
                                 Text="扫描">
        </mycontrol:customTabItem>

        <mycontrol:customTabItem x:Name="tabItem_Setting"   Grid.Column="9" Grid.Row="3" Margin="0,1"                                 
                                 IsSelect="False" 
                                 FontSize="12" 
                                 Text="设置">
        </mycontrol:customTabItem>

        <mycontrol:LogonButton  x:Name="btnLogin"  Grid.Column="11" Grid.Row="2" Margin="10, 15, 10, 5"  
                                btnClick="NvgBtnClick" 
                                IsLogon="False"
                                bottomText="登录/注册" />



        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.ColumnSpan="13">
            <Button Name="btnMinimize" Click="ControlBtnClick" Width="30" Height="30" Margin="0,0,2,0" >-</Button>
            <Button Name="btnClose"    Click="ControlBtnClick" Width="30" Height="30" Margin="0,0,5,0" >X</Button>
        </StackPanel>


      

   



    </Grid>
</Window>
