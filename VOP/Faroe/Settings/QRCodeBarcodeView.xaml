        	FontWeight="Bold"
        	VerticalAlignment="Center"
        	Text="{StaticResource ResStr_Faroe_scan_setting}" Margin="15,22,321,18"/>
        <Button
            Name="tbSettings"
        	Grid.Column="1"
        	Height="35" 
        	Margin="178,13,4,10"
        	Content="Settings..." 
        	FontSize="16"
       		Style="{StaticResource CustomSettingButtonStyle}"
        	Click="Button_Click"
                />
        <Grid Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <GroupBox x:Name="QRCodeBarcodeGroup" Grid.Row="0" Header="QRCode/Barcode Decode" FontWeight="Bold" 
                      FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400"  Margin="5,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0">
                        <TextBlock 
            				Text="Code Type :" 
            				VerticalAlignment="Center"
                            Width="120"
                            FontWeight="Normal"
            				FontSize="12"  HorizontalAlignment="Left" 
                                />
                        <ComboBox 
            				x:Name="cbCodeType"
            				VerticalAlignment="Center" 
                            HorizontalAlignment="Left"
            				Width="200" 
            				Height="30" 
            				Margin="20,0,20,0" 
            				FontSize="12" FontWeight="Normal">
                            <ComboBoxItem Content="QR Code" />
                            <ComboBoxItem Content="Bar Code" />
                            <ComboBoxItem Content="All" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0">
                        <TextBlock 
            				Text="Output Result :" 
            				VerticalAlignment="Center" FontWeight="Normal"
            				FontSize="12" HorizontalAlignment="Left" Width="120"
                                />
                        <TextBox 
            				x:Name="tbFileName"
            				Template="{StaticResource customTextBox}" 
            				VerticalAlignment="Center" HorizontalAlignment="Left"
                            SnapsToDevicePixels ="True"
            				Width="200" 
            				Height="30" 
            				Margin="20,0, 20, 0" 
            				Text=""
            				VerticalContentAlignment="Center" 
                                />
                    </StackPanel>
                </Grid>
            </GroupBox>
            <GroupBox x:Name="separateGroupBox" Grid.Row="1"  Header="Document Separation" FontWeight="Bold" 
                      FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="5,1,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,1,20,4">
                        <TextBlock 
