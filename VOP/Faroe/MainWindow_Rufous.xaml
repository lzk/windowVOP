<Window x:Class="VOP.MainWindow_Rufous"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Faroe Scan" Height="638" Width="850"
        AllowsTransparency="true"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="LoadedMainWindow"
        WindowStyle="None" 
        xmlns:local="clr-namespace:VOP.Controls"
        xmlns:mycontrol="clr-namespace:VOP"
        UseLayoutRounding="True"
        Name="mainWindow"
        Closing="mainWindow_Closing"
        >
    <Window.Resources>
        <ResourceDictionary Source="../Controls/PanelButton.xaml"/>
    </Window.Resources>

    <Viewbox Stretch="Fill">
        <Grid Width="850" Height="638">
            <Grid.Background>
                <ImageBrush ImageSource="../Images/background3.png"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <!-- Title Bar Layout -->
            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="Transparent" MouseLeftButtonDown="MyMouseButtonEventHandler">
                <StackPanel HorizontalAlignment="Right" Margin="0,10,10,0" Orientation="Horizontal" >
                    <local:MinimizeCloseButton x:Name="btnMinimize" Height="35" Width="35" Click="ControlBtnClick" MinimizeOrCloseStyle="Minimize" />
                    <local:MinimizeCloseButton x:Name="btnClose"    Height="35" Width="35" Click="ControlBtnClick" MinimizeOrCloseStyle="Close" />
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
            <Image Source="../Images/VOPicon.png"
                                        Width="32"
                                        Height="32" 
                                        />
                <Label FontSize="16" Foreground="Black" VerticalAlignment="Center" VerticalContentAlignment="Center">VOP</Label>
            </StackPanel>
            <Grid Grid.Row="2" Grid.Column="1" >
                <Border Name="MainPageView" />
            </Grid>
        </Grid>

    </Viewbox>
</Window>
