<Window x:Class="VOP.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="445" Width="425"        
        WindowStartupLocation="CenterScreen"  
        ResizeMode="NoResize"
        WindowStyle="None"
        xmlns:mycontrol="clr-namespace:VOP" >

    <Window.Resources>        
        <Style x:Key="TextCenter_TextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                            <Grid x:Name="grid" Background="{TemplateBinding Background}">
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>                       
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="TextCenter_TextBox_2" TargetType="{x:Type TextBox}">
            <Setter Property="Background" >
                <Setter.Value>
                    <ImageBrush ImageSource="Images\TextBox_Background.png"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid x:Name="grid" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" HorizontalAlignment="Left"
                                          Margin="20,0, 0, 0" 
                                          />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--<ControlTemplate x:Key ="myButtonTemplate"  TargetType ="{x:Type Button}">
            <Grid>
                <Rectangle>
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="C:\Users\ben\Desktop\WPF\SliderStudy_技术交流_2013_09_06\SliderStudy\ICON\GreenBtn_Bk.png" />
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Text="{TemplateBinding Content}" 
                           FontSize="{TemplateBinding Content}"
                           TextAlignment="Center"
                           ForceCursor="True" 
                           Foreground="White">
                </TextBlock>
            </Grid>
        </ControlTemplate>-->

        <ControlTemplate x:Key="switch" TargetType="{x:Type CheckBox}">
            <Grid Name="myCanvas" Background="#CCCCCC">
                <Rectangle Name="Off" 
                            Width="{TemplateBinding Width}"
                                   Height="{TemplateBinding Height}"
                                  >
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images\Switch_Off.png"></ImageBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Rectangle Name="On"
                                   Width="{TemplateBinding Width}"
                                   Height="{TemplateBinding Height}"
                                   Visibility="Hidden" 
                                   >
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images\Switch_On.png"></ImageBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>          
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="Off" Property="Visibility"
                  Value="Hidden" />
                    <Setter TargetName="On" Property="Visibility"
                  Value="Visible" />
                </Trigger>
            </ControlTemplate.Triggers>            
        </ControlTemplate>

    </Window.Resources>


    <Grid Background="#E7E7E7" >
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="35*" />
            <RowDefinition Height="35*" />
            <RowDefinition Height="60*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="60*" />
            <RowDefinition Height="45*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="65*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Background="#213244"
                 Style="{StaticResource TextCenter_TextBox}"                
                 SelectionOpacity="0" BorderThickness="0"
                 IsReadOnly="True"                                                
                 FontSize="20" TextAlignment="Center"
                 Foreground="White"
                 Text="登录"
                          >
        </TextBox>

        <TextBox Grid.Row="2" Background="{x:Null}"
                 Style="{StaticResource TextCenter_TextBox}"                
                 SelectionOpacity="0" BorderThickness="0"
                 IsReadOnly="True"                                                
                 FontSize="20" TextAlignment="Center"
                 Foreground="#999999"
                 Text="使用手机号码快速登录"
                          >
        </TextBox>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="85*"/>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="285*"/>
                <ColumnDefinition Width="85*"/>
            </Grid.ColumnDefinitions>

            <TextBox Name="phoneNum_Textbox" Grid.Column="1" Background="{x:Null}"
                 Style="{StaticResource TextCenter_TextBox}"                
                 SelectionOpacity="0" BorderThickness="0"
                 IsReadOnly="True"                                                
                 FontSize="15" TextAlignment="Center"
                 Foreground="#999999"
                 Text="账户名"
                          >                
            </TextBox>

            <TextBox Grid.Column="2" Style="{StaticResource TextCenter_TextBox_2}"
                     SelectionOpacity="0" 
                     BorderThickness="0"                                                             
                 FontSize="20"                 
                 Foreground="#999999"
                 Text="输入手机号码"
                     >                
            </TextBox>               
        </Grid>


        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="85*"/>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="285*"/>
                <ColumnDefinition Width="85*"/>
            </Grid.ColumnDefinitions>

            <TextBox Name="accountName" Grid.Column="1" Background="{x:Null}"
                 Style="{StaticResource TextCenter_TextBox}"                
                 SelectionOpacity="0" BorderThickness="0"
                 IsReadOnly="True"                                                
                 FontSize="15" TextAlignment="Center"
                 Foreground="#999999"
                 Text="验证码" />

            <mycontrol:CustomTextbox  Grid.Column="2" />         
        </Grid>

        <Grid Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="185*"/>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="185*"/>
            </Grid.ColumnDefinitions>

            <!--<mycontrol:CustomButton Grid.Column="1"   x:Name="btn"   
                                    Content ="登录"   FontSize="20" 
                                    TextColor="White"                                     
                                    BackgroundImagePath="C:\Users\ben\Desktop\WPF\SliderStudy_技术交流_2013_09_06\SliderStudy\ICON\Button_Green.png"
                          />-->
            <Button Name="btn" Grid.Column="1" FontSize="20" >
                <Button.Template>
                    <ControlTemplate >
                        <Grid>
                            <Rectangle >
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="Images\Btn_Green.png" />
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock Name="textBox" Grid.Column="1" Grid.Row="1" 
                 Background="{x:Null}"
                 FontSize="15" 
                 TextAlignment="Center"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"                                        
                 Foreground="White" 
                 Text="登录"
             />
                        </Grid>
                    </ControlTemplate >
                </Button.Template>
            </Button>

        </Grid>

        <Grid Grid.Row="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="185*"/>
                <ColumnDefinition Width="55*"/>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="155*"/>
            </Grid.ColumnDefinitions>

            <CheckBox  Grid.Column="1" 
                 Template="{StaticResource switch}"
            />
         
            <TextBox Grid.Column="2" Background="{x:Null}"
                 Style="{StaticResource TextCenter_TextBox}"                
                 SelectionOpacity="0" BorderThickness="0"
                 IsReadOnly="True"                                                
                 FontSize="15" TextAlignment="Center"
                 Foreground="#A0A0A0"
                 Text=" 下次自动登录"
                          >
            </TextBox>
        </Grid>
        
    </Grid>
</Window>