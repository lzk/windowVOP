<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mycontrol="clr-namespace:VOP" xmlns:Controls="clr-namespace:VOP.Controls" x:Class="VOP.PrintSettingPage"
        Title="PrintSettingPage" Height="560" Width="650"        
        WindowStartupLocation="CenterOwner"  
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="true"
        BorderThickness="10"

        >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Controls/CustomButton.xaml"/>
                <ResourceDictionary Source="Controls/CustomCheckBox.xaml"/>
                <ResourceDictionary Source="Controls/CustomTextBox.xaml"/>
                <ResourceDictionary Source="Controls/CustomRadioButton.xaml"/>
                <ResourceDictionary Source="Controls/CustomButton2.xaml"/>
                <ResourceDictionary Source="CustomControl/CustomComboBox.xaml"/>
                <ResourceDictionary Source="Controls/CustomRadioButtonEx.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>
    <Window.Effect>
        <DropShadowEffect BlurRadius="10" Color="#FF858484" Direction="90" ShadowDepth="3"/>
    </Window.Effect>


    <Grid Margin="-10,0,-10,-10" >
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightColorKey}}"/>
        </Grid.Background>
        <Grid.Resources>
            <Style x:Key="TextCenter_TextBox" TargetType="{x:Type TextBox}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TextBox}">
                            <Grid x:Name="grid" Background="{TemplateBinding Background}">
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="68*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="68*" />
            <RowDefinition Height="3"/>
            <RowDefinition Height="34*" />
            <RowDefinition Height="3*"/>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="102*" />
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*" />
            <RowDefinition Height="94*"/>

            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>


        <TextBox Grid.Row="0" Background="#213244"
			Style="{StaticResource TextCenter_TextBox}"                
			SelectionOpacity="0" BorderThickness="0"
			IsReadOnly="True"                                                
			FontSize="15" TextAlignment="Center"
			Foreground="White"
			Text="更多设置" Grid.ColumnSpan="7"
                          />

        <Controls:GroupBoxDecorator Header="纸张大小" Margin="2,2,0,0"  Grid.Row="2" Grid.Column="1"/>
        <Controls:GroupBoxDecorator Header="页面顺序" Margin="2,2,0,0" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="3"/>

        <Controls:GroupBoxDecorator Header="多页打印" Margin="1,2,0,0" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="4"/>

        <Controls:GroupBoxDecorator Header="双面打印" Margin="1,3,0,61" Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
        <Controls:GroupBoxDecorator Header="纸张方向" Margin="2,1,0,1" Grid.Row="2" Grid.Column="3"/>


        <Controls:GroupBoxDecorator Header="介质类型" Margin="1,1,0,1" Grid.Row="2" Grid.Column="5"/>

        <Controls:GroupBoxDecorator Header="打印质量" Margin="0,2" Grid.Row="4" Grid.Column="5"/>


        <Controls:GroupBoxDecorator Header="缩放比例" Margin="0,2,0,0" Grid.Row="6" Grid.Column="5" Grid.RowSpan="3">
            <TextBlock x:Name="scaling_text" Margin="50,10,55,37" Text="50%" Cursor="Hand" FontFamily="Arial" FontSize="30" Width="77" HorizontalAlignment="Center" TextAlignment="Center" Foreground="#FF747474"/>

        </Controls:GroupBoxDecorator>

        <Controls:GroupBoxDecorator Header="浓度调整" Margin="1,3,0,1" Grid.Row="10" Grid.Column="5"/>


        <Controls:GroupBoxDecorator Header="反转打印" Margin="0,2,0,0" Grid.Row="12" Grid.Column="5" Grid.RowSpan="2"/>
        <TextBlock
        	HorizontalAlignment="Center"
        	VerticalAlignment="Center"
        	Background="{x:Null}"
        	FontSize="14"
        	Foreground="#999999"
        	Text="横向"
        	TextAlignment="Center" Margin="21,36,125,10" Grid.Column="3" Grid.Row="2" Height="18" Width="36" />
        <TextBlock
        	Grid.Column="3"
        	HorizontalAlignment="Center"
        	VerticalAlignment="Center"
        	Background="{x:Null}"
        	FontSize="13"
        	Foreground="#999999"
        	Text="纵向"
        	TextAlignment="Center" Margin="127,37,21,9" Grid.Row="2" Height="20" Width="34" RenderTransformOrigin="0.412,0.25" />
        <Controls:MinimizeCloseButton Grid.Row="0"  Grid.Column="6" MinimizeOrCloseStyle="Close" Click="OnCloseButtonClick" Height="30" VerticalAlignment="Bottom" Margin="10,0,0,0"/>
        <Button Style="{StaticResource CustomButton2}"
        	Name="btnDecrease" Click="BtnClick" Content="-" Margin="23,2,129,29" Grid.Column="5" Grid.Row="8" />
        <Button Style="{StaticResource CustomButton2}"
        	Name="btnIncrease" Click="BtnClick" Content="+" Grid.Column="5" Margin="130,2,24,29" Grid.Row="8" />
        <CheckBox x:Name="cb" Grid.Column="5" Template="{StaticResource customCheckBox}" IsChecked="False" Content="调整至纸张大小" Margin="33,34,23,2" Grid.Row="8"/>
        <CheckBox x:Name="cb_Copy" Grid.Column="1" Template="{StaticResource customCheckBox}" IsChecked="False" Content="省墨打印模式" Margin="13,10,42,13" Grid.Row="14" RenderTransformOrigin="-0.915,6"/>
        <Button HorizontalContentAlignment="Center" IsDefault="False"
        	Content="默认" Template="{StaticResource custombtn}"
        	Height="34" Width="130" Margin="95,19,145,10" Grid.ColumnSpan="3" Grid.Row="14" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button HorizontalContentAlignment="Center" VerticalAlignment="Bottom" IsDefault="False"
        	Content="高级设置" Template="{StaticResource custombtn}"
        	Height="34" Width="130" Margin="147,0,93,9"  Grid.ColumnSpan="3" Grid.Row="14" Grid.Column="1" HorizontalAlignment="Center" />
        <Button HorizontalContentAlignment="Center" IsDefault="True"
        	Content="确定" Template="{StaticResource custombtn}"  Height="34" Width="130" Grid.Column="5" Margin="49,17,0,12" Grid.Row="14" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <StackPanel
        	HorizontalAlignment="Center"
        	VerticalAlignment="Center" 
        	Orientation="Horizontal" Grid.Column="5" Margin="20,38,32,24" Grid.Row="10" Height="40" Width="170" Grid.ColumnSpan="2"
            >


            <Button x:Name="btnDecrease1" Click="BtnClick" Style="{StaticResource CustomButton2}" Content="-" Width="42" Margin="0,4,0,-4" />


            <Rectangle x:Name="rect1" VerticalAlignment="Bottom" Margin="3,0,0,5" Fill="Black" Width="6" Height="5" />
            <Rectangle x:Name="rect2" VerticalAlignment="Bottom" Margin="3,0,0,5" Fill="Black" Width="6" Height="8" />
            <Rectangle x:Name="rect3" VerticalAlignment="Bottom" Margin="3,0,0,5" Fill="Black" Width="6" Height="11" />
            <Rectangle x:Name="rect4" VerticalAlignment="Bottom" Margin="3,0,0,5" Fill="Black" Width="6" Height="14" />
            <Rectangle x:Name="rect5" VerticalAlignment="Bottom" Margin="3,0,0,5" Fill="Black" Width="6" Height="17" />
            <Rectangle x:Name="rect6" VerticalAlignment="Bottom" Margin="3,0,0,5" Fill="Black" Width="6" Height="20" />
            <Rectangle x:Name="rect7" VerticalAlignment="Bottom" Margin="3,0,0,5" Fill="Black" Width="6" Height="23" />

            <Button x:Name="btnIncrease1" Click="BtnClick" Style="{StaticResource CustomButton2}" Content="+" 
        		Margin="5,3,5,-3" />

        </StackPanel>
        <ComboBox
        	Style="{StaticResource customComboBox}"
        	Background="White"
                    Grid.Column="1" Margin="25,34,25,6" Grid.Row="2"
                    >
            <ComboBoxItem Style="{StaticResource customComboBoxItem}"  IsSelected="true" Content="Letter" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="A4" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="A5" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="A6" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="B5(ISO)" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="B6" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="Executive" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="16K" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="A5(LEF)" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="B6(LEF)" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="User Defined Size" />
        </ComboBox>
        <ComboBox
        	Style="{StaticResource customComboBox}"
        	Background="White"
        	Grid.Column="5" Margin="25,33,23,7" Grid.Row="2"
                    >
            <ComboBoxItem Style="{StaticResource customComboBoxItem}"  IsSelected="true" Content="普通纸" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="再生纸" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="厚纸" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="薄纸" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="标签纸" />

        </ComboBox>
        <ComboBox
        	Style="{StaticResource customComboBox}"
        	Background="White"
        	Grid.Column="5" Margin="25,34,23,8" Grid.Row="4"
                    >
            <ComboBoxItem Style="{StaticResource customComboBoxItem}"  IsSelected="true" Content="标准（600*600）" />
            <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="精细（1200*600）" />


        </ComboBox>
        <CheckBox x:Name="cb_2Side" Grid.Column="1" Template="{StaticResource customCheckBox}" IsChecked="true" Content="双面打印" Margin="16,36,85,10" Grid.Row="13" RenderTransformOrigin="-0.915,6"/>
        <CheckBox x:Name="cb_MultiplePagePrint" Grid.Column="1" Template="{StaticResource customCheckBox}" IsChecked="true" Content="多页打印" Margin="17,36,84,13" Grid.Row="10" RenderTransformOrigin="-0.915,6"/>
        <TextBlock Text="2合1" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" FontSize="13" Foreground="#FF7A7A7A" Margin="79,11,70,69" Height="18"/>
        <TextBlock Text="4合1" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" FontSize="13" Foreground="#FF7A7A7A" Margin="157,13,4,67" Height="18" Grid.ColumnSpan="2"/>
        <TextBlock Text="9合1" Grid.Row="10" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" FontSize="13" Foreground="#FF7A7A7A" Margin="36,13,113,67" Height="18"/>
        <TextBlock Text="16合1" Grid.Row="10" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="36" FontSize="13" Foreground="#FF7A7A7A" Margin="112,12,31,68" Height="18"/>
        <TextBlock Text="1合2x2" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="46" FontSize="13" Foreground="#FF7A7A7A" Margin="117,80,16,0" Height="18"/>
        <TextBlock Text="1合3x3" Grid.Row="10" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="46" FontSize="13" Foreground="#FF7A7A7A" Margin="0,79,133,1" Height="18"/>
        <TextBlock Text="1合4x4" Grid.Row="10" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="46" FontSize="13" Foreground="#FF7A7A7A" Margin="79,82,54,2" Height="18" Grid.RowSpan="2"/>
        <CheckBox Template="{StaticResource switchBox}"
        	IsChecked="False" Grid.Column="3" Margin="68,35,63,9" RenderTransformOrigin="2.74,2.92" Grid.Row="2" />

        <RadioButton GroupName="Goup1" Margin="21,39,95,15"  Cursor="Hand" Name="cb_123" 
           Style="{StaticResource CustomRadioButtonEx}"   Grid.Column="5" Grid.Row="13" Width="63" Height="37" VerticalAlignment="Center">
            <Image Height="37"  Stretch="None" Source="Images/123.png" Width="63" />
        </RadioButton>
        <RadioButton GroupName="Goup1" Margin="100,39,16,15" Cursor="Hand" x:Name="cb_321" 
        	Style="{StaticResource CustomRadioButtonEx}" IsChecked="true" Grid.Column="5" Grid.Row="13" Width="63" Height="37" VerticalAlignment="Center">
            <Image Height="37" Stretch="None" Source="Images/321.png" Width="63" />
        </RadioButton>

        <RadioButton GroupName="Goup2" Height="42" Margin="0,39,13,0" Cursor="Hand" Name="FlipOnLongEdgeRadioButton" VerticalAlignment="Top" 
          Style="{StaticResource CustomRadioButtonEx}" SnapsToDevicePixels="True" Grid.Row="13" Grid.Column="3" HorizontalAlignment="Right" Width="127">
            <StackPanel Margin="2,0,8,0">
                <Image Height="42" Margin="10,0,66,0"  Stretch="None" Source="Images/FlipOnLongEdge.png" HorizontalAlignment="Left" Width="50"/>
                <TextBlock Text="长边翻页" HorizontalAlignment="Left" VerticalAlignment="Center" Width="56" FontSize="13" Margin="60,-30,0,30" Height="20" FontWeight="Bold" FontFamily="Arial">
                    <TextBlock.Foreground>
                        <SolidColorBrush Color="DimGray"/>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>
        </RadioButton>
        <RadioButton GroupName="Goup2" Height="42" Width="123" IsChecked="true"  Margin="101,40,146,0" Cursor="Hand" x:Name="FlipOnShortEdgerRadioButton" VerticalAlignment="Top" 
        	Style="{StaticResource CustomRadioButtonEx}" SnapsToDevicePixels="True" Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="3">
            <StackPanel Width="120">
                <Image Height="42" Margin="10,0,66,0" Stretch="None" Source="Images/FlipOnShortEdge.png" HorizontalAlignment="Left" Width="50"/>
                <TextBlock Text="短边翻页" HorizontalAlignment="Left" VerticalAlignment="Center" Width="56" FontSize="13" Margin="60,-30,0,30" Height="20" FontWeight="Bold" FontFamily="Arial" Foreground="DimGray"/>
            </StackPanel>
        </RadioButton>
        <RadioButton GroupName="Goup3" IsChecked="true" Width="152" Margin="26,38,1,10"  Cursor="Hand" x:Name="cb_112233" 
        	Style="{StaticResource CustomRadioButtonEx}"   Grid.Column="1" Grid.Row="4" Height="54" VerticalAlignment="Center" Grid.RowSpan="3">
            <RadioButton.BorderBrush>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlDarkDarkColorKey}}"/>
            </RadioButton.BorderBrush>
            <Image Width="152" Stretch="None" Source="Images/112233.png" Margin="1,0,-1,0" />
        </RadioButton>
        <RadioButton GroupName="Goup3" Width="152" Margin="2,38,25,10"  Cursor="Hand" x:Name="cb_123123" 
        	Style="{StaticResource CustomRadioButtonEx}"   Grid.Column="3" Grid.Row="4" Height="54" VerticalAlignment="Center" Grid.RowSpan="3">
            <Image Width="152" Stretch="None" Source="Images/123123.png" Margin="1,0,-1,0"/>
        </RadioButton>
        <RadioButton GroupName="Goup4" IsChecked="True" Margin="60,39,52,85"  Cursor="Hand" x:Name="cb_2in1" 
        	Style="{StaticResource CustomRadioButtonEx}"   Grid.Column="1" Grid.Row="8" Width="67" Height="48" VerticalAlignment="Center" Grid.RowSpan="3">
            <Image Width="51" Height="35" Margin="8,7,0,6" Stretch="None" Source="Images/2in1.png" HorizontalAlignment="Left" />
        </RadioButton>
        <RadioButton GroupName="Goup4"  Margin="137,40,166,82"  Cursor="Hand" x:Name="cb_4in1" 
        	Style="{StaticResource CustomRadioButtonEx}"   Grid.Column="1" Grid.Row="8" Width="67" Height="50" VerticalAlignment="Center" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Image Width="51" Height="35" Stretch="None" Source="Images/4in1.png" />
        </RadioButton>
        <RadioButton GroupName="Goup4"  Margin="18,40,94,82"  Cursor="Hand" x:Name="cb_9in1" 
        	Style="{StaticResource CustomRadioButtonEx}"   Grid.Column="3" Grid.Row="8"  Width="67" Height="50" VerticalAlignment="Center" Grid.RowSpan="3">
            <Image Width="51" Height="35" Stretch="None" Source="Images/9in1.png" />
        </RadioButton>
        <RadioButton GroupName="Goup4"  Margin="98,40,14,82"  Cursor="Hand" x:Name="cb_16in1" 
        	Style="{StaticResource CustomRadioButtonEx}"   Grid.Column="3" Grid.Row="8"  Width="67" Height="50" VerticalAlignment="Center" Grid.RowSpan="3">
            <Image Width="51" Height="35" Stretch="None" Source="Images/16in1.png" />
        </RadioButton>
        <RadioButton GroupName="Goup4"  Margin="105,33,7,17"  Cursor="Hand" x:Name="cb_1in2x2" 
        	Style="{StaticResource CustomRadioButtonEx}"   Grid.Column="1" Grid.Row="10" Width="67" Height="48" VerticalAlignment="Center">
            <Image Width="51" Height="35" Stretch="None" Source="Images/1in2x2.png" />
        </RadioButton>
        <RadioButton GroupName="Goup4" Margin="1,31,123,17"  Cursor="Hand" x:Name="cb_1in3x3" 
        	Style="{StaticResource CustomRadioButtonEx}"   Grid.Column="2" Grid.Row="10"  Width="67" Height="50" VerticalAlignment="Center" Grid.ColumnSpan="2">
            <Image Width="51" Height="35" Stretch="None" Source="Images/1in3x3.png"/>
        </RadioButton>
        <RadioButton GroupName="Goup4" Margin="66,33,46,17"  Cursor="Hand" x:Name="cb_1in4x4" 
        	Style="{StaticResource CustomRadioButtonEx}"   Grid.Column="3" Grid.Row="10" Width="67" Height="48" VerticalAlignment="Center">
            <Image Width="51" Height="35" Stretch="None" Source="Images/1in4x4.png" />
        </RadioButton>



    </Grid>
</Window>