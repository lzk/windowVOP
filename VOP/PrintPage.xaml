                                                   CurValue="30"
                                                   >
                    </mycontrol:SliderChangeControl>
       
                    <Rectangle Grid.Column="1" Margin="5, 0, 0, 0">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="Images\shoppingCart.png" />
