                </ComboBox>

                <TextBlock Grid.Row="4" Grid.Column="1"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Background="{x:Null}"
                           FontSize="12"
                           Foreground="#555555"
                           Text="设备状态:"
                           TextAlignment="Center" />

                <mycontrol:StatusTextBlock Grid.Row="5" 
                         Grid.Column="1" 
                         Margin="0, 5, 0, 0"
