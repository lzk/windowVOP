<UserControl x:Class="VOP.PrintPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mycontrol="clr-namespace:VOP"
             Width="666"
             Height="333">
    <UserControl.Resources>       
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Controls/CheckBox_Template.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>      
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images\PagePrint.png" />
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="535*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="285*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="215*" />
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="350*" />
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="255*" />
                <ColumnDefinition Width="25*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35*" />
                <RowDefinition Height="340*" />
                <RowDefinition Height="40*" />
            </Grid.RowDefinitions>


            <Border  Name="statusPanel" Grid.Row="1" Grid.Column="1" />

            <!--<mycontrol:StatusPanel Grid.Row="1" Grid.Column="1"></mycontrol:StatusPanel>-->

            <mycontrol:ImagePreviewControl x:Name="imagePreviewCtrl"
                                           Grid.Row="1"
                                           Grid.Column="3"
                                           ImgSetPath="F:\ben">
            </mycontrol:ImagePreviewControl>

            <Grid Grid.Row="1"
                  Grid.Column="5"
                  Background="{x:Null}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="225*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="95*" />
                </Grid.RowDefinitions>

                <Rectangle>
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images/PagePrint_Bk_Right.png" />
                    </Rectangle.Fill>
                </Rectangle>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="45*" />
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="45*" />
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="20*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="22*" />
                        <ColumnDefinition Width="42*" />
                        <ColumnDefinition Width="92*" />
                        <ColumnDefinition Width="42*" />
                        <ColumnDefinition Width="22*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Background="{x:Null}"
                               FontSize="15"
                               Foreground="#999999"
                               Text="横向"
                               TextAlignment="Center" />

                    <CheckBox Grid.Row="1"
                              Grid.Column="2"
                              Template="{StaticResource switch}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Background="{x:Null}"
                               FontSize="15"
                               Foreground="#999999"
                               Text="纵向"
                               TextAlignment="Center" />

                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Background="{x:Null}"
                               FontSize="15"
                               Foreground="#999999"
                               Text="彩色"
                               TextAlignment="Center" />

                    <CheckBox Grid.Row="3"
                              Grid.Column="2"
                              Template="{StaticResource switch}" />

                    <TextBlock Grid.Row="3"
                               Grid.Column="3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Background="{x:Null}"
                               FontSize="15"
                               Foreground="#999999"
                               Text="黑白"
                               TextAlignment="Center">                        
                    </TextBlock>                
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60*" />
                        <ColumnDefinition Width="265*" />
                        <ColumnDefinition Width="60*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="45*" />
                    </Grid.RowDefinitions>            
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>