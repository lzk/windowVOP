            </mycontrol:ImagePreviewControl>

            <Grid Grid.Row="1"
                  Grid.Column="5"
                  Background="{x:Null}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="225*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="95*" />
                    <!--
                         <RowDefinition Height="40*" />
                         <RowDefinition Height="10*" />
                         <RowDefinition Height="45*" />
                    -->
                </Grid.RowDefinitions>

                <Rectangle>
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images/PagePrint_Bk_Right.png" />
                    </Rectangle.Fill>
                </Rectangle>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="45*" />
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="45*" />
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="20*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="22*" />
                        <ColumnDefinition Width="42*" />
                        <ColumnDefinition Width="92*" />
                        <ColumnDefinition Width="42*" />
                        <ColumnDefinition Width="22*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Background="{x:Null}"
                               FontSize="15"
                               Foreground="#999999"
                               Text="横向"
                               TextAlignment="Center" />

                    <CheckBox Grid.Row="1"
                              Grid.Column="2"
                              Template="{StaticResource switch}" />

                    <TextBlock Grid.Row="1"
