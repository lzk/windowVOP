                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Background="{x:Null}"
                               FontSize="15"
                               Foreground="#999999"
                               Text="纵向"
                               TextAlignment="Center" />

                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Background="{x:Null}"
                               FontSize="15"
                               Foreground="#999999"
                               Text="彩色"
                               TextAlignment="Center" />

                    <CheckBox Grid.Row="3"
                              Grid.Column="2"
