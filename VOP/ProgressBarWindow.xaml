<Window x:Class="VOP.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        Height="58"
        Width="58"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        xmlns:mycontrol="clr-namespace:VOP"
        >
    <Grid>
        <mycontrol:BusyRefresh RenderTransformOrigin="0.5,0.5">
            <mycontrol:BusyRefresh.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="127"/>
                    <TranslateTransform/>
                </TransformGroup>
            </mycontrol:BusyRefresh.RenderTransform>
        </mycontrol:BusyRefresh>
    </Grid>
</Window>
