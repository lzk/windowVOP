<Window x:Class="VOP.MessageBoxEx_Video"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageBoxEx_Video" 
        Height="590"
        Width="478"
        BorderThickness="24"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"        
        xmlns:local="clr-namespace:VOP.Controls"
        xmlns:mycontrol="clr-namespace:VOP" 
        ShowInTaskbar="False"
        VerticalAlignment="Center"
        WindowStartupLocation="CenterOwner" >
    <Window.Effect>
        <DropShadowEffect BlurRadius="24" Color="#FF858484" Direction="90" ShadowDepth="3"/>
    </Window.Effect>

    <Grid  Background="#FFEDEDED">
        <Grid.RowDefinitions>
            <RowDefinition Height="27*" />
            <RowDefinition Height="70*" />
            <RowDefinition Height="420*" />
            <RowDefinition Height="25*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="350*" />
            <ColumnDefinition Width="40*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.ColumnSpan="3" Background="#213244" MouseLeftButtonDown="Title_MouseButtonEventHandler">
            <TextBlock Name="captionTextBlock" FontSize="16" Text="" Foreground="White" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

            <local:MinimizeCloseButton MinimizeOrCloseStyle="Close" IsCancel="True" Height="30" Width="30" VerticalAlignment="Center" HorizontalAlignment="Right" Click="btnClose_Click"/>

            <!--<Button Name="btnClose"  Click="btnClose_Click" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5">
                <Button.Template>
                    <ControlTemplate>
                        <Grid Background="{x:Null}">
                            <Image Source="..\..\Images\MainWindow_Close.PNG" ></Image>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>-->
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*" />
                <RowDefinition Height="58*" />
                <RowDefinition Height="6*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="54*" />
                <ColumnDefinition Width="296*" />
                <!--<ColumnDefinition Width="37*"/>-->
            </Grid.ColumnDefinitions>

            <Image Source="..\..\..\Images\Warning.tif" Grid.Row="1"></Image>
            <TextBlock Name="messageBoxTextBlock" Grid.Row="1" Grid.Column="1" FontSize="14"  Margin="20" Text="打印机卡纸，请按照提示操作!" Foreground="#555555" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>

        </Grid>

        <!--<Rectangle Fill="Red" ></Rectangle>-->
        <Grid Name="MediaGrid" Grid.Row="2" Grid.Column="1" >
            <!--Background="#FFCDCDCD"-->
            <Rectangle Stroke="Black" StrokeThickness="1" />
            <MediaElement Name="mediaElement" LoadedBehavior="Play" Stretch="Fill" Margin="1" Loaded="mediaElement_Loaded">
                <MediaElement.Triggers>
                    <EventTrigger RoutedEvent="MediaElement.Loaded">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <MediaTimeline Name="media" Storyboard.TargetName="mediaElement"  RepeatBehavior="Forever" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </MediaElement.Triggers>
            </MediaElement>
        </Grid>

    </Grid>
</Window>
