<UserControl x:Class="VOP.CopyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vop="clr-namespace:VOP"
             xmlns:local="clr-namespace:VOP.Controls"
             Width="638"
             Height="367"
             >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Controls/CustomButton.xaml"/>
                <ResourceDictionary Source="Controls/CustomCheckBox.xaml"/>
                <ResourceDictionary Source="Controls/CustomTextBoxRes.xaml"/>
                <ResourceDictionary Source="Controls/CustomRadioButton.xaml"/>
                <ResourceDictionary Source="Controls/AdjustButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images\PageCopy.tif" />
        </Grid.Background>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="210" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">

                <StackPanel>
                    <local:GroupBoxDecorator Header="复印份数" Height="80" Width="300"
                        Margin="0,60,0,10" 
                        >

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">

                            <Button x:Name="btnDecCopies" Style="{StaticResource AdjustButton}"
                                    Content="-" Click="btnDecCopies_Click" />

                            <TextBlock x:Name="txtblkCopies" 
                                VerticalAlignment="Center" 
                                Margin="35,0"
                                FontSize="30"
                                Width="35"
                                >
                                1
                            </TextBlock>

                            <Button x:Name="btnIncCopies" Style="{StaticResource AdjustButton}"
                                    Content="+" Click="btnIncCopies_Click" />

                        </StackPanel>
                    </local:GroupBoxDecorator>

                    <vop:Density
                        Margin="0,5,0,15" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        />

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Image x:Name="imgIDCard"
                            Source="Images/IDCardCopyIconDisable.png"
                               Stretch="None" > </Image>
                           <TextBlock Margin="20,0" VerticalAlignment="Center">身份证复印</TextBlock>
                        <CheckBox x:Name="chkBtnIDCardCopy" Template="{StaticResource switchBox}"
                                  IsChecked="False" Width="50" Height="25"
                                  Checked="CheckBox_Checked"
                                  Unchecked="CheckBox_Checked" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button IsDefault="False" IsEnabled="True" Content="更多设置" Template="{StaticResource custombtn}"
                                Name="btnSetting" Width="120" Height="25"
                                Margin="20,10" Click="SettingBtnClick" HorizontalAlignment="Center"/>

                        <Button x:Name="btnCopy" HorizontalContentAlignment="Center"
                                IsDefault="True" Content="复印"
                                Template="{StaticResource custombtn}"  Height="35" Width="150" Click="Button_Click" HorizontalAlignment="Center" />
                    </StackPanel>

                </StackPanel>


            </Grid>

        </Grid>


    </Grid>
</UserControl>
