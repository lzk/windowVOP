<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:VOP.Controls"
	x:Class="VOP.ScanSetting"
	x:Name="Window"
	Title="ScanSetting"
    Width="578" Height="493"

    AllowsTransparency="true"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    WindowStyle="None" 
    BorderThickness="24"
    >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Controls/CustomButton.xaml"/>
                <ResourceDictionary Source="Controls/CustomCheckBox.xaml"/>
                <ResourceDictionary Source="Controls/CustomTextBox.xaml"/>
                <ResourceDictionary Source="Controls/CustomRadioButton.xaml"/>
                <ResourceDictionary Source="Controls/CustomButton2.xaml"/>
                <ResourceDictionary Source="CustomControl/CustomComboBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Effect>
        <DropShadowEffect BlurRadius="24" Color="#FF858484" Direction="90" ShadowDepth="3"/>
    </Window.Effect>

	<Grid x:Name="LayoutRoot">

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="90" />
            <RowDefinition Height="240" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="265" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Name="TitleBar"  Background="#FF203144" Grid.Row="0"
            Grid.ColumnSpan="2" >
            <TextBlock Text="更多设置" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

        <local:MinimizeCloseButton Width="30" HorizontalAlignment="Right"
            Grid.ColumnSpan="2"  Grid.Row="0" MinimizeOrCloseStyle="Close" IsCancel="True"/>

            <local:GroupBoxDecorator Grid.ColumnSpan="2" Grid.Row="1"
                Header="文档类型" Height="70" Width="485" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <CheckBox Template="{StaticResource customCheckBox}"
                        IsChecked="true" Content="图片" Margin="10,0" />

                    <CheckBox Template="{StaticResource customCheckBox}"
                        IsChecked="false" Content="图文" Margin="10,0"/>

                    <CheckBox Template="{StaticResource customCheckBox}"
                        IsChecked="false" Content="文本" Margin="10,0"/>
                </StackPanel>
            </local:GroupBoxDecorator>

            <StackPanel VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" >
                <local:GroupBoxDecorator Header="分辨率" Height="70"
                    Width="220" >
                <ComboBox
                    Style="{StaticResource customComboBox}"
                    Background="White"
                    Width="145" Height="25"
                    VerticalAlignment="Center"
                    >
                    <ComboBoxItem Style="{StaticResource customComboBoxItem}"  Content="ComboBox Item" /> 
                    <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="Disalbe Item" IsEnabled="false" > 
                    </ComboBoxItem>
                    <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="ComboBox Item" /> 
                    <ComboBoxItem  Style="{StaticResource customComboBoxItem}" IsSelected="true" Content="Selected Item" >
                    </ComboBoxItem>
                    <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="ComboBox Item" /> 
                </ComboBox>
                </local:GroupBoxDecorator>
                <local:GroupBoxDecorator Header="色彩模式" Height="70"
                    Width="220" Margin="0,10" >
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
                    <CheckBox Template="{StaticResource customCheckBox}"
                        IsChecked="true" Content="彩色" Margin="5,0" />

                    <CheckBox Template="{StaticResource customCheckBox}"
                        IsChecked="false" Content="灰阶" Margin="5,0"/>

                    <CheckBox Template="{StaticResource customCheckBox}"
                        IsChecked="false" Content="黑白" Margin="5,0"/>

                </StackPanel>
                </local:GroupBoxDecorator>
                <local:GroupBoxDecorator Header="扫描区域大小" Height="70"
                    Width="220" >
                <ComboBox
                    Style="{StaticResource customComboBox}"
                    Background="White"
                    Width="145" Height="25"
                    VerticalAlignment="Center"
                    >
                    <ComboBoxItem Style="{StaticResource customComboBoxItem}"  Content="ComboBox Item" /> 
                    <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="Disalbe Item" IsEnabled="false" > 
                    </ComboBoxItem>
                    <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="ComboBox Item" /> 
                    <ComboBoxItem  Style="{StaticResource customComboBoxItem}" IsSelected="true" Content="Selected Item" >
                    </ComboBoxItem>
                    <ComboBoxItem  Style="{StaticResource customComboBoxItem}" Content="ComboBox Item" /> 
                </ComboBox>
                </local:GroupBoxDecorator>
            </StackPanel>

            <StackPanel  VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" >
                <local:GroupBoxDecorator Header="亮度" Height="100"
                    Width="220" Margin="0,0,0,15"  >
                    <Grid>
                        <Image Stretch="None" VerticalAlignment="Top"
                            Margin="0,5" Source="Images/Brightness.png" />

                        <StackPanel Margin="0,5" Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom" >
                            <Button Style="{StaticResource CustomButton2}"
                                Content="-" />

                            <TextBlock 
                                VerticalAlignment="Center" 
                                Margin="40,0"
                                FontSize="30"
                                >
                                50
                            </TextBlock>

                            <Button Style="{StaticResource CustomButton2}"
                                Content="+" />

                        </StackPanel>

                    </Grid>
                </local:GroupBoxDecorator>
                <local:GroupBoxDecorator Header="对比度" Height="100"
                    Width="220" >
                    <Grid>
                        <Image Stretch="None" VerticalAlignment="Top"
                            Margin="0,5" Source="Images/Constrast.png" />

                        <StackPanel Margin="0,5" Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom" >
                            <Button Style="{StaticResource CustomButton2}"
                                Content="-" />

                            <TextBlock 
                                VerticalAlignment="Center" 
                                Margin="40,0"
                                FontSize="30"
                                >
                                50
                            </TextBlock>

                            <Button Style="{StaticResource CustomButton2}"
                                Content="+" />

                        </StackPanel>

                    </Grid>
                </local:GroupBoxDecorator>
            </StackPanel>

        <StackPanel Grid.ColumnSpan="2" Grid.Row="3" Orientation="Horizontal"
            HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button HorizontalContentAlignment="Center" IsDefault="False"
                Content="默认" Template="{StaticResource custombtn}"
                Height="35" Width="150" Margin="0,0,20,0" />
            <Button HorizontalContentAlignment="Center" IsDefault="True"
                Content="确定" Template="{StaticResource custombtn}"  Height="35" Width="150" />
        </StackPanel>

    </Grid>
</Window>
