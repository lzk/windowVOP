             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"      
             x:Name="Container"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">


    <Canvas Name="myCanvas" Loaded="Loaded" >

        <Rectangle Name="rect2" Loaded="rect2_Loaded"
