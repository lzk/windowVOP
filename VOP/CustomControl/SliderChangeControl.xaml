<UserControl x:Class="VOP.SliderChangeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"      
             x:Name="Container"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">


    <Canvas Name="myCanvas" Loaded="Loaded" >

        <Rectangle Name="rect2" Loaded="rect2_Loaded"
                   Width="{Binding ElementName=Container,Path=ActualWidth}"
            Height="{Binding ElementName=Container,Path=ActualHeight}"
                   >

            <Rectangle.Fill>
                <ImageBrush ImageSource="customImages\sliderChange_bk.png"></ImageBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid x:Name="foreGrid">
            <Rectangle Name="rect" 
                   Height="{Binding ElementName=Container,Path=ActualHeight}"
                  Width="{Binding ElementName=Container,Path=ActualWidth}"
                   >
                </Rectangle>
        </Grid>
    </Canvas>
</UserControl>