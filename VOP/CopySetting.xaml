<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:VOP.Controls"
	x:Class="VOP.CopySetting"
	x:Name="Window"
	Title="CopySetting"
    Width="580" Height="550"
    ShowInTaskbar="False" 
    AllowsTransparency="true"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    WindowStyle="None" 
    BorderThickness="24" Loaded="Window_Loaded"
    >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Controls/CustomButton.xaml"/>
                <ResourceDictionary Source="Controls/CustomCheckBox.xaml"/>
                <ResourceDictionary Source="Controls/CustomTextBoxRes.xaml"/>
                <ResourceDictionary Source="Controls/CustomRadioButton.xaml"/>
                <ResourceDictionary Source="Controls/AdjustButton.xaml"/>
                <ResourceDictionary Source="Controls/CustomComboBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Effect>
        <DropShadowEffect BlurRadius="24" Color="#FF858484" Direction="90" ShadowDepth="3"/>
    </Window.Effect>

	<Grid x:Name="LayoutRoot" Background="#FFE7E7E7" >

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="260" />
            <RowDefinition Height="150" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Name="TitleBar"  Background="#FF203144" Grid.Row="0">
            <TextBlock Text="更多设置" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

        <local:MinimizeCloseButton Width="30" HorizontalAlignment="Right" Grid.Row="0" MinimizeOrCloseStyle="Close" IsCancel="True"/>

        <Grid Grid.Row="1" >
                <local:GroupBoxDecorator Margin="38,10,0,0" Header="缩放" Height="80" Width="220" HorizontalAlignment="Left" VerticalAlignment="Top" >
                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">

                        <Button x:Name="btnScalingDec" Style="{StaticResource AdjustButton}"
                            Content="-" Click="btnScalingDec_Click" FontSize="45" />

                        <Grid Width="120" >
                            <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center" >
                                <TextBlock x:Name="txtblkScaling" TextAlignment="Center" FontSize="30" VerticalAlignment="Center"> 100 </TextBlock>
                                <TextBlock FontSize="30" VerticalAlignment="Center"> % </TextBlock>
                            </StackPanel>
                        </Grid>

                        <Button x:Name="btnScalingInc" Style="{StaticResource AdjustButton}"
                            Content="+" Click="btnScalingInc_Click" FontSize="30" />

                    </StackPanel>
                </local:GroupBoxDecorator>

                <local:GroupBoxDecorator Margin="0,10,38,0" Header="扫描模式" Height="80" HorizontalAlignment="Right" VerticalAlignment="Top" Width="220">

                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">

                        <RadioButton x:Name="rdBtnScanModePhoto" GroupName="ScanMode" IsChecked="True"
                            Template="{StaticResource customRadioButton}"
                            Content="照片" VerticalAlignment="Center"
                            Margin="10,0" Checked="rdBtnScanModePhoto_Checked" ></RadioButton>
                        <RadioButton x:Name="rdBtnScanModeTxt" GroupName="ScanMode" IsChecked="False"
                            Template="{StaticResource customRadioButton}"
                            Content="文本" VerticalAlignment="Center"
                            Margin="10,0" Checked="rdBtnScanModeTxt_Checked" ></RadioButton>

                    </StackPanel>

                </local:GroupBoxDecorator>


                <local:GroupBoxDecorator Margin="38,10,0,0" Header="原稿尺寸" Height="70" Width="220" HorizontalAlignment="Left" VerticalAlignment="Center" >
                    <ComboBox x:Name="cboDocSize"
                        Style="{StaticResource customComboBox}"
                        Background="White"
                        Width="145" Height="25" SelectionChanged="cboDocSize_SelectionChanged"
                        >

                    </ComboBox>
                </local:GroupBoxDecorator>

                <local:GroupBoxDecorator Margin="0,10,38,0" Header="分辨率" Height="70" HorizontalAlignment="Right" VerticalAlignment="Center" Width="220" >
                    <ComboBox x:Name="cboResolution"
                        Style="{StaticResource customComboBox}"
                        Background="White"
                        Height="25"
                        Width="145"
                        HorizontalAlignment="Center" SelectionChanged="cboResolution_SelectionChanged"
                        >
                    </ComboBox>
                </local:GroupBoxDecorator>

                <local:GroupBoxDecorator Margin="38,0,0,8" Header="输出纸张大小" Height="70" Width="220" HorizontalAlignment="Left" VerticalAlignment="Bottom" >
                    <ComboBox x:Name="cboOutputSize"
                        Style="{StaticResource customComboBox}"
                        Background="White"
                        Width="145" Height="25" SelectionChanged="cboOutputSize_SelectionChanged"
                        >

                    </ComboBox>
                </local:GroupBoxDecorator>

                <local:GroupBoxDecorator Margin="0,0,38,8" Header="介质类型" Height="70" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="220">
                    <ComboBox x:Name="cboMediaType"
                        Style="{StaticResource customComboBox}"
                        Background="White"
                        Width="145" Height="25" SelectionChanged="cboMediaType_SelectionChanged"
                        >

                    </ComboBox>
                </local:GroupBoxDecorator>
        </Grid>


        <local:GroupBoxDecorator Grid.Row="2" Header="N合1复印" Height="140" Width="455" >

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="90" />
                    <ColumnDefinition Width="90" />
                    <ColumnDefinition Width="90" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="chkNin1" Template="{StaticResource customCheckBox}" IsChecked="true" 
                    Content="多页打印" HorizontalAlignment="Center" Checked="chkNin1_Checked" Unchecked="chkNin1_Unchecked" />

                <Rectangle x:Name="rectNin1_2" Grid.Column="1" Fill="Gray" RadiusX="5" RadiusY="5" Width="80" Height="65" />
                <Rectangle x:Name="rectNin1_4" Grid.Column="2" Fill="Gray" RadiusX="5" RadiusY="5" Width="80" Height="65" />
                <Rectangle x:Name="rectNin1_9" Grid.Column="3" Fill="Gray" RadiusX="5" RadiusY="5" Width="80" Height="65" />
                <Image x:Name="imgNin1_2" Grid.Column="1" Stretch="None"
                    Source="Images\Nin1_2.png" MouseDown="imgNin1_2_MouseDown" />
                <Image x:Name="imgNin1_4" Grid.Column="2" Stretch="None"
                    Source="Images\Nin1_4.png" MouseDown="imgNin1_4_MouseDown" />
                <Image x:Name="imgNin1_9" Grid.Column="3" Stretch="None"
                    Source="Images\Nin1_9.png" MouseDown="imgNin1_9_MouseDown" />
            </Grid>

        </local:GroupBoxDecorator>

        <StackPanel Grid.Row="5" Orientation="Horizontal"
            HorizontalAlignment="Center">
            <local:ButtonEx x:Name="btnDefault" HorizontalContentAlignment="Center" IsDefault="False"
                Content="默认" 
                Height="38" Width="125" Margin="0,0,20,0" Click="btnDefault_Click" />
            <local:ButtonEx x:Name="btnApply" HorizontalContentAlignment="Center" IsActiveEx="True"
                Content="确定"  Height="38" Width="125" Click="btnApply_Click" />
        </StackPanel>

    </Grid>
</Window>
